<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/locazione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:text="Lamezia Terme"
            android:textSize="100px"></TextView>
        <TextView
            android:id="@+id/ultimo_aggiornato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:text="Last updated : 23 maggio"
            android:textSize="35px"></TextView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/contenitorePrincipale"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="24Â° C"
                android:textSize="240px"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/temp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Min: 23 C"
                    android:textSize="60px"></TextView>
                <TextView
                    android:id="@+id/temp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Max: 192 C"
                    android:textSize="60px"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/condizione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:text="Cloudy"
                    android:textSize="100px"></TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:paddingVertical="50px">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="125px"
                android:layout_height="125px"
                android:src="@drawable/icons8_wind_100">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="40px"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15 km/h"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="70px"
                android:id="@+id/wind_speed"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="125px"
                android:layout_height="125px"
                android:src="@drawable/icons8_sunrise_100">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="40px"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:20"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="70px"
                android:id="@+id/sunrise_time"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="125px"
                android:layout_height="125px"
                android:src="@drawable/icons8_sunset_100">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunset"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="40px"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:20"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textSize="70px"
                android:id="@+id/sunset_time"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>